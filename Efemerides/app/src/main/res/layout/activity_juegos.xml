<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JuegosActivity">

    <ImageView
        android:id="@+id/imgFondo2"
        android:layout_width="wrap_content"
        android:layout_height="729dp"
        android:adjustViewBounds="false"
        android:alpha="0.25"
        android:contentDescription="@null"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/whatsapp_image_2022_03_04_at_22_36_01" />

    <Button
        android:id="@+id/btnDiaMemoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Memoria"
        android:text="Memoria"
        app:layout_constraintBottom_toBottomOf="@+id/imgFondo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="@+id/imgFondo2"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>