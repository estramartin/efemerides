<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imgFondoMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Memoria"
    tools:context=".MenuJuegos">

    <ImageView
        android:id="@+id/imgFondo3"
        android:layout_width="wrap_content"
        android:layout_height="729dp"
        android:adjustViewBounds="false"
        android:alpha="0.25"
        android:contentDescription="@null"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/whatsapp_image_2022_03_04_at_22_36_01" />

    <Button
        android:id="@+id/btnDiaMemoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:onClick="Memoria"
        android:text="@string/btnMemoria"
        app:backgroundTint="@color/Evita_Azul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgFondo3"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imgFondo3"
        app:layout_constraintTop_toTopOf="@+id/imgFondo3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnMalvinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Malvinas"
        android:text="@string/btnMalvinas"
        app:backgroundTint="@color/Evita_Azul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDiaMemoria"
        app:layout_constraintVertical_bias="0.107" />

</androidx.constraintlayout.widget.ConstraintLayout>